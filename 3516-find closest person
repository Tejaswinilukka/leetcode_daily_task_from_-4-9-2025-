class Solution {
    public int findClosest(int x, int y, int z) {
       int d1=Math.abs(z-x);->this is the function that converts the any negetive num to positive
       int d2=Math.abs(z-y);
       if(d1>d2){
        return 2;
       }
       if(d2>d1){
        return 1;
       }
       else{
        return 0;
       }
       }
    }
